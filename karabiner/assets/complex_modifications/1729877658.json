    {
      "description": "CAPSLOCK + hjkl to arrow keys (Post CAPSLOCK if press CAPSLOCK alone)",
      "manipulators": [
        {
          "conditions": [
            {
              "name": "caps_lock pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
