# general settings
auto-reload yes
max-items 50
article-sort-order date-desc
# Wider Title: The %-17T means the feed title is left-aligned with 17 characters. You can increase this number.
articlelist-format "%4i %f %D %?T?|%-33T| ?%t"

# external browser
browser "/bin/w3m %u"
macro m set browser "/usr/local/bin/mpv %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
macro l set browser "/usr/local/bin/firefox %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key g
unbind-key G

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# Move g/G functionality to s/S
bind-key s sort
bind-key S rev-sort

# Vim-style gg and G for top/bottom
bind gg everywhere home -- "Go to top of list"
bind G everywhere end -- "Go to bottom of list"

# Page navigation
bind-key ^D pagedown
bind-key ^U pageup

# solarized
color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          black     cyan
color listfocus_unread   black     cyan
color info               default   black
color article            default   default

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
