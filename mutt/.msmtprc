defaults
auth on
tls on
tls_starttls on
tls_trust_file /etc/ssl/cert.pem
syslog LOG_USER
logfile ~/.msmtp.log
timeout 60

#### account 1 ------------------------------------
account simu@sspaeti.com
host asmtp.mail.hostpoint.ch
domain sspaeti.com
port 587
auth on
from simu@sspaeti.com
user simu@sspaeti.com
passwordeval "grep 'set imap_pass' ~/.dotfiles/zsh/.secret.muttrc | awk -F'\"' '{print $2}'"


